<div class="index-songs">


  <h1>List of Songs</h1>
<div class="row">

<% @songs.each do |song| %>
<div class="col-sm-6">
  <div class="col-sm-6">
    <p>Artist: <%= song.artist.name %> </p>
    <p>Title: <%= song.name %> </p>
    <p>Duration: <%= song.length %> minutes </p>
    <p>Release Date: <%= song.release_date %> </p>
    <hr />
  </div>

  <div class="col-sm-6">
    <p><%= link_to "Edit Song", edit_song_path(song), class: "btn btn-primary" %></p>
    <p><%= link_to "Delete Song", song_path(song.id), method: :delete, data: {confirm: "Are you sure you want to delete this song?" }, class: "btn btn-danger" %></p>
  </div>
</div>
<% end %>

</div>
<%= link_to "Add Song", new_song_path, class: "btn btn-default" %>
</div>
