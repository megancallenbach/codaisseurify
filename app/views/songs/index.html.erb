<div class="index-songs">
  <h1>List of Songs</h1>
  <div class="row">
    <% @songs.each do |song| %>
    <div class="col-sm-6">
      
      <div class="col-sm-6">
        <p>Artist: <%= song.artist.name %> </p>
        <p>Title: <%= song.name %> </p>
        <p>Genre: <%= song.genre %> </p>
        <p>Duration: <%= song.length %> minutes </p>
        <p>Release Date: <%= song.release_date %> </p>
      </div>

      <div class="col-sm-6">
        <p><%= link_to 'Edit', edit_artist_song_path(song.artist, song), class: "btn btn-primary" %></p>
        <p><%= link_to 'Delete', [song.artist, song], data: {confirm: "Are you sure you want to delete this song?" }, :method => :delete, class: "btn btn-danger"  %></p>
      </div>
      <hr />

    </div>
    <% end %>
  </div>
</div>
