<div class="artist-list">


  <div class="row">
  <h1> List of Artists </h1>
    <% @artists.each do |artist| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <p class="artist-name"><%= link_to artist.name, artist_path(artist) %></p>
      <p><%= link_to image_tag("artist.jpg", class: "small-image"), artist_path(artist) %> </p>
    </div>
    <% end %>
</div>
</div>
<div class="links-div">
<hr />
<%= link_to "Create New Artist", new_artist_path, class: "btn btn-primary" %>
<%= link_to "Create New Song", new_song_path, class: "btn btn-primary" %>
</div>
