<%= form_for @artist do |f| %>
  <div class="form-group">
    <label>Artist Name</label>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Artist Genre</label>
    <%= f.text_field :genre, class: "form-control" %>
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
