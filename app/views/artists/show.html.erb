<div class="row">
  <div class="col-xs-6">
    <div class="artist-details">

    <h1> <%= @artist.name %> </h1>

    <p class="genre">Genre: <%= @artist.genre %></p>

        <h2> List of Songs: </h2>

        <% @artist.songs.each do |song| %>

        <p class="song-name"><%=song.name%></p>
        <p>Duration: <%=song.length%> minutes</p>
        <p>Release Date: <%=song.release_date%></p>
        <hr/>
      <% end %>
    </div>

  </div>

  <div class="col-xs-6">
    <div class="artist-image">
    <% @artist.photos.each do |photo| %>
      <%= image_tag photo.image, class: "artist-image" %>
    <% end %>
    </div>
  </div>
</div>

<%= link_to "Add Song", new_song_path, class: "btn btn-primary" %>
<%= link_to "Edit Artist", edit_artist_path, class: "btn btn-primary" %>
<%= link_to "Delete Artist", artist_path(@artist.id), method: :delete, data: {confirm: "NOTE: Deleting an artist will delete all associated songs. \nDo you wish to continue?" }, class: "btn btn-danger" %>
